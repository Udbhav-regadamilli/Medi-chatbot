<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:text="@string/Heading"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="42dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="                Revolutionize your healthcare with our platform, bringing medical expertise to your home. No more waiting rooms or long waits experience quick, convenient, and the predictive healthcare. Our state of the art application that combines the smart technology for early issue detection, provides drug details, and locates nearby hospitals. Say hello to hassle-free healthcare at your fingertips."
            android:justificationMode="inter_word"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:padding="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="412dp"
            android:layout_height="wrap_content"
            android:text="PROJECT AIMS"
            android:textColor="@color/lavender"
            android:textSize="44dp"
            android:layout_marginTop="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/predict_disease"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="188dp"
                android:layout_height="120dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="Predict diseases efficiently by analyzing user symptoms, considering age, gender, and symptom severity for accurate diagnostics."
                app:layout_constraintStart_toEndOf="@+id/imageView1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/pic1"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Users input a specific drug name, and the application retrieves comprehensive information, including details on usage, potential side effects, and recommended dosage. "
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="17dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/pic2"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Facilitating users with nearby hospital suggestions and user-friendly route maps for seamless navigation."
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                android:layout_marginStart="17dp"
                android:layout_marginTop="30dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="412dp"
            android:layout_height="wrap_content"
            android:text="CONTACT US:"
            android:textColor="@color/lavender"
            android:textSize="44dp"
            android:layout_marginTop="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUN - SAT : 24 Hours"
            android:textColor="@color/lavender"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="14dp"/>


        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:drawableLeft="@drawable/call"
            android:text="  89798 89798"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="90dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_email_24"
            android:text="   medicalchatbot@gmail.com"
            android:textColor="@color/black"
            android:textSize="23dp" />



    </LinearLayout>

</ScrollView>
